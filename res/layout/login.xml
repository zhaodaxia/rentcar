<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/login_title" />

    <include layout="@layout/login_1" />

    <include layout="@layout/login_2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="24dp" >

        <Button
            android:id="@+id/login_bt"
            style="@style/item_button"
            android:background="@drawable/button_select"
            android:text="立即登录" />
    </RelativeLayout>

    <include layout="@layout/login_3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            style="@style/DividerLine_style"
            android:layout_width="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合作账号登录"
            android:textColor="@color/gray" />

        <ImageView
            style="@style/DividerLine_style"
            android:layout_width="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/login_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dl_qq" />

        <ImageView
            android:id="@+id/login_wx"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dl_wx" />

        <ImageView
            android:id="@+id/login_wb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dl_wb" />
    </LinearLayout>

</LinearLayout>