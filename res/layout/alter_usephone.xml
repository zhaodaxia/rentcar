<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/title_act_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp" >

        <EditText
            android:id="@+id/alter_phone_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="10dp"
            android:textColor="@color/blue" />

        <Button
            android:id="@+id/alter_phone_getcaptcha"
            android:layout_width="90dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_select2"
            android:text="获取验证码"
            android:textColor="@color/white" />
    </RelativeLayout>

    <EditText
        android:id="@+id/alter_usephone_captcha_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:hint="请输入6位数短信验证码"
        android:inputType="number"
        android:maxLength="6"
        android:paddingLeft="10dp"
        android:textColor="@color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="24dp" >

        <Button
            android:id="@+id/alter_usephone_save_bt"
            style="@style/item_button"
            android:background="@drawable/button_select"
            android:text="保存" />
    </RelativeLayout>

</LinearLayout>