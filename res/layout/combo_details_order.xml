<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_act_layout" />

    <RelativeLayout 
        android:id="@+id/combo_usecar_data"
        style="@style/item_rl" >

        <TextView
            style="@style/myrentcar_textview"
            android:text="用车日期" />

        <TextView 
            android:id="@+id/combo_usecar_data_tv"
            style="@style/fastTV_style"
            android:textSize="@dimen/text_size1" />

        <ImageView style="@style/centerIV2_style" />
    </RelativeLayout>

    <ImageView style="@style/DividerLine_style" />

    <RelativeLayout 
        style="@style/item_rl" 
        android:id="@+id/combo_car_addr">

        <TextView
            style="@style/myrentcar_textview"
            android:text="用车地址" />

        <TextView 
            style="@style/fastTV_style" 
            android:id="@+id/combo_car_addr_tv"
            android:textSize="@dimen/text_size1"/>

        <ImageView style="@style/centerIV2_style" />
    </RelativeLayout>

    <ImageView style="@style/DividerLine_style" />

    <RelativeLayout 
        style="@style/item_rl" 
        android:id="@+id/combo_orderman_phone">

        <TextView
            style="@style/myrentcar_textview"
            android:text="联系电话" />

        <EditText
            android:id="@+id/combo_orderman_phone_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:gravity="right"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="#3184CB"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageView style="@style/DividerLine_style" />

    <RelativeLayout
        android:id="@+id/combo_atonce_order"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/xc_07" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/xl_12"
            android:gravity="center_vertical"
            android:text="立即预约"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>