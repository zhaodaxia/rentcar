<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/title_act_layout" />

    <RelativeLayout
        android:id="@+id/findcar_use"
        style="@style/item_rl" >

        <TextView
            style="@style/item_textview"
            android:text="用途" />

        <TextView
            android:id="@+id/use_tv"
            style="@style/fastTV_style"
            android:textSize="@dimen/text_size1" />

        <ImageView style="@style/centerIV2_style" />
    </RelativeLayout>

    <ImageView style="@style/DividerLine_style" />

    <RelativeLayout
        android:id="@+id/findcar_model"
        style="@style/item_rl" >

        <TextView
            style="@style/item_textview"
            android:text="车型" />

        <TextView
            android:id="@+id/brand_tv"
            style="@style/fastTV_style"
            android:textSize="@dimen/text_size1" />

        <ImageView style="@style/centerIV2_style" />
    </RelativeLayout>

    <ImageView style="@style/DividerLine_style" />

    <RelativeLayout style="@style/item_rl" >

        <TextView
            android:id="@+id/findcar_tv"
            style="@style/item_textview"
            android:text="联系人:" />

        <EditText
            android:layout_marginLeft="5dp"
            android:inputType="text"
            android:id="@+id/findcar_et"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/findcar_tv"
            android:background="@null"
            android:textColor="#3184CB"
            android:textSize="@dimen/text_size1" />
    </RelativeLayout>

    <ImageView style="@style/DividerLine_style" />
    
    <RelativeLayout style="@style/item_rl" >

        <TextView
            android:id="@+id/findcar_phone_tv"
            style="@style/item_textview"
            android:text="手机号:" />

        <EditText
            android:layout_marginLeft="5dp"
            android:inputType="phone"
            android:maxLength="11"
            android:id="@+id/findcar_phone_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/findcar_phone_tv"
            android:background="@null"
            android:textColor="#3184CB"
            android:textSize="@dimen/text_size1" />
    </RelativeLayout>

    <ImageView style="@style/DividerLine_style" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="24dp" >

        <Button
            android:id="@+id/search_fast_findcar"
            style="@style/item_button"
            android:background="@drawable/xc_07"
            android:text="提交" />
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/voice_fast_findcar"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/tj_03"
        android:gravity="center" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/xc_11" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:text="语音寻车"
            android:textColor="@color/white" />
    </RelativeLayout>

</LinearLayout>