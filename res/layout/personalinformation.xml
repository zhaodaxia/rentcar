<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/title_act_layout" />

    <ImageView
        style="@style/DividerLine_style"
        android:layout_marginTop="15dp" />

    <RelativeLayout
        android:id="@+id/pi_username_rl"
        style="@style/item_rl" >

        <TextView
            style="@style/item_textview"
            android:text="用户名"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/pi_username_tv"
            style="@style/fastTV_style"
            android:textSize="@dimen/text_size1" />

        <ImageView style="@style/centerIV2_style" />
    </RelativeLayout>

    <ImageView style="@style/DividerLine_style" />

    <RelativeLayout
        android:id="@+id/pi_phone_rl"
        style="@style/item_rl" >

        <TextView
            style="@style/item_textview"
            android:text="联系电话"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/pi_phone_tv"
            style="@style/fastTV_style"
            android:textSize="@dimen/text_size1" />

        <ImageView style="@style/centerIV2_style" />
    </RelativeLayout>

    <ImageView style="@style/DividerLine_style" />

    <RelativeLayout
        android:id="@+id/pi_pwd_rl"
        style="@style/item_rl" >

        <TextView
            style="@style/item_textview"
            android:text="密码修改"
            android:textColor="@color/gray" />

        <EditText
            android:enabled="false"
            android:background="@null"
            android:id="@+id/pi_pwd_et"
            style="@style/fastTV_style"
            android:inputType="textPassword"
            android:textSize="@dimen/text_size1" />

        <ImageView style="@style/centerIV2_style" />
    </RelativeLayout>

    <ImageView style="@style/DividerLine_style" />

</LinearLayout>